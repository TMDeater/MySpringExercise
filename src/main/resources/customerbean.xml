<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="count" class="java.lang.Integer">
        <constructor-arg value="2" />
    </bean>

    <bean id = "customer1" class = "com.springexe.springapp.domain.customer">
        <property name = "fstName" value = "Alan"/>
        <property name = "lstName" value = "Po"/>
    </bean>

    <bean id = "customer2" class = "com.springexe.springapp.domain.customer">
        <property name = "fstName" value = "Bobo"/>
        <property name = "lstName" value = "So"/>
    </bean>
</beans>